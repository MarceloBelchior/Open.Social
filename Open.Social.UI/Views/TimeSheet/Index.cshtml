<!-- Page container -->
<div class="page-container" ng-controller="TimeSheetController" ng-init="init()">
    <!-- Page content -->
    <div class="page-content">
        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Row toggler -->
            <div class="panel panel-flat">
                <div class="panel-heading">
                    <h5 class="panel-title">Administração de Usuarios</h5>
                    <div class="heading-elements">
                        <ul class="icons-list">
                            <li><a data-action="collapse"></a></li>
                            <li><a data-action="reload"></a></li>
                            <li><a data-action="close"></a></li>
                            <li><a data-action="add"></a></li>
                        </ul>
                    </div>
                </div>
                <div class="panel-body">
                    
                    <div class="row">
                        <div class=" col-lg-9">Apontamento de horas.<code>Habilitar e desabilitar</code>.</div>
                        <div class="col-lg-3">

                            <!-- /pagination -->
                            <div class="form-group">
                                <label class="display-block">Periodo: </label>
                                <button type="button" class="btn btn-default daterange-predefined">
                                    <i class="icon-calendar22 position-left"></i>
                                    <span></span>
                                    <b class="caret"></b>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                

                <table class="table table-togglable table-hover">
                    <thead>
                        <tr>
                            <th data-hide="phone">Nome</th>
                            <th data-toggle="true">Email</th>
                            <th data-hide="phone,tablet">Cadastro</th>
                            <th data-hide="phone,tablet">DOB</th>
                            <th data-hide="phone">Status</th>
                            <th class="text-center" style="width: 30px;"><i class="icon-menu-open2"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="user in listUser | limitTo:10">
                            <td ng-click="Edit(user)">{{ user.name }}</td>
                            <td><a href="/#/Admin">{{user.email}}</a></td>
                            <td>{{ user.created  }}</td>
                            <td>{{ user.birth }}</td>
                            <td><span class="label label-success">Active</span></td>
                            <td class="text-center">
                                <ul class="icons-list">
                                    <li class="dropdown">
                                        <a href="/#/Admin" class="dropdown-toggle" data-toggle="dropdown">
                                            <i class="icon-menu9"></i>
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-right">
                                            <li><a href="/#/Admin"><i class="icon-file-pdf"></i> Gear nova senha.</a></li>
                                            <li><a href="/#/Admin"><i class="icon-file-excel"></i> Bloquear Usuario</a></li>
                                            <li><a href="/#/Admin"><i class="icon-file-word"></i> Enviar notificação.</a></li>
                                            <li><a ng-click="Remove(user)"><i class="icon-file-word"></i> Remover Usuario.</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
               <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal_form_vertical">Apontamento de Horas <i class="icon-play3 position-right"></i></button>
           
            <!-- /row toggler -->
        </div>
    </div>
    
</div>
<div ng-include="'./TimeSheet/AddTimeSheet'"></div>